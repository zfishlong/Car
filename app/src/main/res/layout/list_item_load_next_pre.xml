<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom_local"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right|bottom"
    android:orientation="horizontal" >

    <TextView
        style="@style/text_session_item_f4_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:gravity="right|center"
        android:text="@string/next_page_title" />

    <ImageView
        android:id="@+id/btn_pre_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_page_up" />

    <TextView
        android:id="@+id/tv_pages"
        style="@style/text_session_item_f3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="@string/tv_page" />

    <ImageView
        android:id="@+id/btn_next_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_page_down" />

</LinearLayout>