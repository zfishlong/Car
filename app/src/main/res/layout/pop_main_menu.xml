<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_main_menu"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_home_more_bg"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/menu_layout_all_function"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_main_menu"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_home_all_function" />

        <TextView
            style="@style/text_session_item_f3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="@string/main_all_function" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/main_page_background" />

    <LinearLayout
        android:id="@+id/menu_layout_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_main_menu"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_home_setting" />

        <TextView
            style="@style/text_session_item_f3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="@string/common_control" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/main_page_background" />
   <LinearLayout
        android:id="@+id/menu_layout_push_function"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_main_menu"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_push_function" 
            android:layout_gravity="center_vertical"/>

        <TextView
            style="@style/text_session_item_f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="@string/main_push" 
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/push_no_read_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_icon" 
            android:contentDescription="@null"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</LinearLayout>