<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#7F000000"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_setting_pop_loading"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@drawable/butten_back_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/pb_setting_loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/style_progerssbar_green" />

        <TextView
            android:id="@+id/tv_pop_title"
            style="@style/text_session_item_f3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/setting_help_text_loading" />

        <LinearLayout
            android:id="@+id/ll_loading_cancel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:visibility="visible" >

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/line_y" />

            <ImageView
                android:id="@+id/iv_cancel_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/btn_mic_cancel" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>