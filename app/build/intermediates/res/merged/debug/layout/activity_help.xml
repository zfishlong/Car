<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3a3d42" >

    <RelativeLayout
        android:id="@+id/menu_pannel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/second_page_banner_height"
        android:background="@drawable/top_bk" >

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/help_title"
            android:textColor="@color/grey_white"
            android:textSize="@dimen/normal_text_size" />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/title_setting_margin"
            android:background="@drawable/btn_menu_back" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_pannel"
        android:background="@drawable/top_bk_shadow" />

    <ExpandableListView
        android:id="@+id/helpListview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_pannel"
        android:childDivider="#272E2B"
        android:divider="@null"
        android:groupIndicator="@null"
        android:listSelector="@android:color/transparent"
        android:scrollbarThumbVertical="@drawable/scrollbar"
        android:scrollbars="vertical" >
    </ExpandableListView>

</RelativeLayout>