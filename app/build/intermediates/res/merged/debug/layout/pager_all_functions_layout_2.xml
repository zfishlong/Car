<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mycontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/main_icon_margin_left"
    android:layout_marginRight="@dimen/main_icon_margin_right"
    android:background="@color/main_page_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/firstlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <com.unisound.unicar.gui.view.ImageViewWithText
            android:id="@+id/btn_function_local_search"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            ImageSrc="@drawable/icon_feature_local_search"
            Text="@string/domain_local_search" >
        </com.unisound.unicar.gui.view.ImageViewWithText>

        <com.unisound.unicar.gui.view.ImageViewWithText
            android:id="@+id/btn_function_traffic"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            ImageSrc="@drawable/icon_feature_traffic"
            Text="@string/function_traffic" >
        </com.unisound.unicar.gui.view.ImageViewWithText>

        <com.unisound.unicar.gui.view.ImageViewWithText
            android:id="@+id/btn_function_limit"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            ImageSrc="@drawable/icon_feature_limit"
            Text="@string/function_limit" >
        </com.unisound.unicar.gui.view.ImageViewWithText>

        <com.unisound.unicar.gui.view.ImageViewWithText
            android:id="@+id/btn_function_radio"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            ImageSrc="@drawable/icon_feature_radio"
            Text="@string/radio" >
        </com.unisound.unicar.gui.view.ImageViewWithText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondlayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>