    <!-- 4-local search -->

    <FrameLayout
        android:id="@+id/main_local_search"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/btn_fuction_item_bg"
        android:foreground="@drawable/butten_mask"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_local_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/domain_local_search"
                android:src="@drawable/icon_home_local_search" />

            <TextView
                android:id="@+id/local_search_text"
                style="@style/text_session_item_f4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/homepage_text_margin_icon"
                android:text="@string/main_local_search" />

            <TextView 
                android:id="@+id/tv_help_text_local_search"
                style="@style/text_session_item_f4_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/homepage_text_margin_text"
                />
        </LinearLayout>
    </FrameLayout>
